<!DOCTYPE html>
<html>
<head>
<meta charset="utf-8">
<title>Painel - Cadastros</title>
<style>body{font-family:Arial;padding:20px}table{width:100%;border-collapse:collapse}td,th{border:1px solid #ddd;padding:8px}</style>
</head>
<body>
<h2>Cadastros</h2>
<p><a href="/logout">Sair</a> | <a href="/panel/export/csv">Exportar CSV</a></p>
<form method="get" action="/panel"><input name="q" value="<%= q %>" placeholder="Pesquisar..."/><button type="submit">Pesquisar</button></form>
<table>
<thead><tr><th>ID</th><th>Nome</th><th>Idade</th><th>Email</th><th>CPF</th><th>Criado</th><th>Ações</th></tr></thead>
<tbody>
<% users.forEach(u => { %>
<tr>
<td><%= u.id %></td>
<td><a href="/panel/user/<%= u.id %>"><%= u.nome %> <%= u.sobrenome %></a></td>
<td><%= u.idade %></td>
<td><%= u.email %></td>
<td><%= u.cpf %></td>
<td><%= u.createdAt.toISOString().slice(0,19).replace('T',' ') %></td>
<td>
<form method="post" action="/panel/delete/<%= u.id %>" onsubmit="return confirm('Deletar?');"><button type="submit">Deletar</button></form>
</td>
</tr>
<% }) %>
</tbody>
</table>
</body>
</html>




